<module xmlns="urn:jboss:module:1.9" name="org.wildfly.clustering.jgroups.spi">

    <properties>
        <property name="jboss.api" value="private"/>
    </properties>

    <resources>
        <artifact name="${org.wildfly:wildfly-clustering-jgroups-spi}"/>
    </resources>

    <dependencies>
        <module name="org.jboss.as.clustering.common"/>
        <!-- Provides AddressFactory implementation required by Infinispan -->
        <module name="org.jboss.as.clustering.infinispan" services="import" optional="true"/>
        <module name="org.jboss.modules"/>
        <module name="org.jgroups"/>
        <module name="org.wildfly.clustering.jgroups.api"/>
        <module name="org.wildfly.service"/>
    </dependencies>
</module>
