<module xmlns="urn:jboss:module:1.9" name="org.infinispan.hibernate-cache">

    <properties>
        <property name="jboss.api" value="private"/>
    </properties>


    <resources>
        <artifact name="${org.infinispan:infinispan-hibernate-cache-spi}"/>
        <artifact name="${org.infinispan:infinispan-hibernate-cache-commons}"/>
        <artifact name="${org.infinispan:infinispan-hibernate-cache-v60}"/>
    </resources>

    <dependencies>
        <module name="java.naming"/>
        <module name="java.sql"/>
        <module name="jakarta.transaction.api"/>

        <module name="org.hibernate"/>
        <module name="org.hibernate.jipijapa-hibernate6" services="import"/>
        <module name="org.infinispan" services="import"/>
        <module name="org.infinispan.commons"/>
        <module name="org.infinispan.component.annotations"/>
        <module name="org.jboss.as.jpa.spi"/>
        <module name="org.jboss.logging"/>
        <module name="org.wildfly.clustering.infinispan.embedded.spi" services="import"/>
    </dependencies>
</module>
