            <groupId>${ee.maven.groupId}</groupId>
            <artifactId>wildfly-web-common</artifactId>
            <exclusions>
                <exclusion>
                    <groupId>*</groupId>
                    <artifactId>*</artifactId>
                </exclusion>
            </exclusions>
        </dependency>

