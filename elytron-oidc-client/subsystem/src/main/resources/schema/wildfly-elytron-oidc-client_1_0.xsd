            <xs:element name="provider-url" type="xs:string" minOccurs="0" maxOccurs="1"/>
            <xs:element name="realm" type="xs:string" minOccurs="0" maxOccurs="1"/>
            <xs:element name="provider" type="xs:string" minOccurs="0" maxOccurs="1"/>
