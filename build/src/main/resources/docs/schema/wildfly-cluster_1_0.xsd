<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
            targetNamespace="urn:jboss:domain:cluster:1.0"
            xmlns:tns="urn:jboss:domain:cluster:1.0"
            elementFormDefault="qualified"
            attributeFormDefault="unqualified"
            version="1.0">

    <!-- The subsystem root element -->
    <xs:element name="subsystem" type="tns:subsystem">
        <xs:annotation>
            <xs:documentation>Allows configuration of cluster subsystem.</xs:documentation>
        </xs:annotation>
    </xs:element>

    <xs:complexType name="subsystem">
        <xs:sequence>
            <xs:element name="management-client" type="tns:management-client" maxOccurs="1">
                <xs:annotation>
                    <xs:documentation>Configures management client settings.</xs:documentation>
                </xs:annotation>
            </xs:element>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="management-client">
        <xs:attribute name="socket-binding" type="xs:string" use="required">
            <xs:annotation>
                <xs:documentation>Identifies the socket binding to use for the management client.</xs:documentation>
            </xs:annotation>
        </xs:attribute>
    </xs:complexType>

</xs:schema>
