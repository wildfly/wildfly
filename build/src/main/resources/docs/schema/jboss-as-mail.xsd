<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns="urn:jboss:domain:mail:1.0"
           targetNamespace="urn:jboss:domain:mail:1.0"
           elementFormDefault="qualified"
           attributeFormDefault="unqualified"
           version="1.0">
    <!-- The security subsystem root element -->
    <xs:element name="subsystem" type="mail-subsystemType"/>

    <!--
    <mail-session jndi-name="java:/Mail">
                <login name="nobody" password="pass"/>
                <smtp-server address="localhost" port="9999"/>
           </mail-session>
    -->
    <xs:complexType name="mail-subsystemType">
        <xs:annotation>
            <xs:documentation>
                <![CDATA[
                The configuration of the mail subsystem.
            ]]>
            </xs:documentation>
        </xs:annotation>
        <xs:choice minOccurs="1" maxOccurs="unbounded">
            <xs:element name="mail-session" type="mail-sessionType"/>
        </xs:choice>
    </xs:complexType>
    <xs:complexType name="mail-sessionType">
        <xs:all>
            <xs:element name="login">
                <xs:complexType mixed="true">
                    <xs:attribute name="name"/>
                    <xs:attribute name="password"/>
                </xs:complexType>
            </xs:element>
            <xs:element name="smtp-server" type="server-type" />
            <xs:element name="pop3-server" type="server-type" />
            <xs:element name="imap-server" type="server-type" />
        </xs:all>
        <xs:attribute name="jndi-name" use="required"/>
        <xs:attribute name="debug" use="optional"/>
    </xs:complexType>

    <!--<xs:element name="smtp-server" type="server-type">
                <xs:complexType mixed="true">
                    <xs:attribute name="address" use="required"/>
                    <xs:attribute name="port" use="required"/>
                </xs:complexType>
            </xs:element>-->

    <xs:complexType name="server-type" mixed="true">
        <xs:attribute name="address" use="required"/>
        <xs:attribute name="port" use="required"/>
    </xs:complexType>

</xs:schema>
