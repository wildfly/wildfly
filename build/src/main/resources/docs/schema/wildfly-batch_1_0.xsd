<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns="urn:jboss:domain:batch:1.0"
           targetNamespace="urn:jboss:domain:batch:1.0"
           elementFormDefault="qualified"
           attributeFormDefault="unqualified"
           version="1.0">
    <!-- The batch subsystem root element -->
    <xs:element name="subsystem" type="batch-subsystemType"/>

    <xs:complexType name="batch-subsystemType">
        <xs:annotation>
            <xs:documentation>
                <![CDATA[
                The configuration of the batch subsystem.
            ]]>
            </xs:documentation>
        </xs:annotation>
        <xs:sequence>
            <xs:element name="job-repository" type="job-repositoryType" minOccurs="0" maxOccurs="1"/>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="job-repositoryType">
        <xs:annotation>
            <xs:documentation>
                <![CDATA[
                The type of the job repository
            ]]>
            </xs:documentation>
        </xs:annotation>
        <xs:choice minOccurs="1" maxOccurs="1">
            <xs:element name="in-memory" />
            <xs:element name="jdbc" type="job-repositoryJDBCType"/>
        </xs:choice>
    </xs:complexType>

    <xs:complexType name="job-repositoryJDBCType">
        <xs:annotation>
            <xs:documentation>
                <![CDATA[
                        Used to describe how the job repository should connect to a database.
                ]]>
            </xs:documentation>
        </xs:annotation>
        <xs:choice minOccurs="1" maxOccurs="1">
            <xs:element name="datasource" type="datasourceType"/>
        </xs:choice>
    </xs:complexType>

    <xs:complexType name="datasourceType">
        <xs:annotation>
            <xs:documentation>
                <![CDATA[
                        The datasource JNDI name used for the JDBC connection
                ]]>
            </xs:documentation>
        </xs:annotation>
        <xs:attribute name="jndi-name" type="xs:string" use="required" />
    </xs:complexType>
</xs:schema>
