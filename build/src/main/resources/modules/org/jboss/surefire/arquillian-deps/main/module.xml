<!--
   Convenience modules to import the modules typically needed to run an arquillian test in 
   a pure modular environment 
 -->
<module xmlns="urn:jboss:module:1.0" name="org.jboss.surefire.arquillian-deps">
    <dependencies>
       <module name="javax.api" export="true"/>
       <module name="javax.inject.api" export="true"/>
       <module name="org.junit" export="true"/>
       <module name="org.jboss.arquillian.junit" export="true"/>
       <module name="org.jboss.arquillian.protocol.jmx" export="true"/>
       <module name="org.jboss.arquillian.protocol.osgi" export="true"/>
       <module name="org.jboss.arquillian.spi" export="true"/>
       <module name="org.jboss.arquillian.testenricher.msc" export="true"/>
       <module name="org.jboss.arquillian.testenricher.osgi" export="true"/>
       <module name="org.jboss.as.embedded" export="true"/>
       <module name="org.jboss.as.jmx" export="true"/>
       <module name="org.jboss.marshalling.river" export="true"/>
       <module name="org.jboss.osgi.spi" export="true"/>
       <module name="org.jboss.shrinkwrap.core" services="export" export="true"/>
       <module name="org.osgi.core" export="true"/>
    </dependencies>
</module>
