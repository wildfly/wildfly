<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.jboss.as</groupId>
        <artifactId>jboss-as-build</artifactId>
        <version>7.4.0.Final-redhat-SNAPSHOT</version>
    </parent>

    <artifactId>jboss-as-build-javadoc</artifactId>

    <name>JBoss Application Server: Build-javadoc</name>
    <packaging>pom</packaging>

    <profiles>
        <profile>
            <id>javadocPomGen</id>
            <build>
                <plugins>
				    <plugin>
				      <artifactId>maven-antrun-plugin</artifactId>
				      <executions>
					    <execution>
					      <id>javadoc-pomgen</id>
					      <phase>validate</phase>
					      <configuration>
						    <target>
						      <echo message="Start to generate javadoc pom."/>
						      <exec executable="sh">
							    <arg value="javadocPomGen.sh" />
						      </exec>
                              <echo message="Finished generating javadoc pom."/>
						    </target>
					      </configuration>
					      <goals>
						    <goal>run</goal>
					      </goals>
					    </execution>
				      </executions>
				    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>javadocDist</id>
            <properties>
                <javadoc.branding>JBoss Application Server public API - ${project.version}</javadoc.branding>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-javadoc-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>javadocs-dist</id>
                                <goals>
                                    <goal>aggregate-jar</goal>
                                </goals>
                                <phase>validate</phase>
                                <configuration>
                                    <archive><manifest/></archive>
                                    <debug>true</debug>
                                    <verbose>true</verbose>
                                    <maxmemory>1500m</maxmemory>
                                    <encoding>ISO-8859-1</encoding>

                                    <windowtitle>${javadoc.branding} public API</windowtitle>
                                    <doctitle>${javadoc.branding} public API</doctitle>
                                    <header>${javadoc.branding}</header>
                                    <footer>${javadoc.branding}</footer>

                                    <includeDependencySources>true</includeDependencySources>
                                    <dependencySourceIncludes></dependencySourceIncludes>
                                    <dependencySourceExcludes></dependencySourceExcludes>
                                    <groups></groups>
                                    
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

</project>
