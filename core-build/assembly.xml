<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>distro</id>
    <formats>
       <format>zip</format>
    </formats>

    <includeBaseDirectory>false</includeBaseDirectory>

    <fileSets>
        <fileSet>
            <directory>target</directory>
            <outputDirectory/>
            <includes>
                <include>${server.output.dir.prefix}-core-${project.version}/**</include>
            </includes>
            <excludes>
                <exclude>**/*.sh</exclude>
                <exclude>${server.output.dir.prefix}-core-${project.version}/domain/tmp/auth</exclude>
                <exclude>${server.output.dir.prefix}-core-${project.version}/standalone/tmp/auth</exclude>
                <exclude>**/*-users.properties</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>target</directory>
            <outputDirectory/>
            <includes>
                <include>${server.output.dir.prefix}-core-${project.version}/**/*.sh</include>
            </includes>
            <fileMode>0755</fileMode>
        </fileSet>
         <fileSet>
            <directory>target</directory>
            <outputDirectory/>
            <includes>
                <include>${server.output.dir.prefix}-core-${project.version}/**/*-users.properties</include>
            </includes>
            <fileMode>0600</fileMode>
        </fileSet>
        <fileSet>
            <directory>target</directory>
            <outputDirectory/>
            <includes>
                <include>${server.output.dir.prefix}-core-${project.version}/domain/tmp/auth</include>
                <include>${server.output.dir.prefix}-core-${project.version}/standalone/tmp/auth</include>
            </includes>
            <directoryMode>0700</directoryMode>
        </fileSet>
    </fileSets>
</assembly>
