<project>
    ...
    <profiles>
        ...
        <profile>
            <id>provisioned-server</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>{provisioningMavenPluginGroupID}</groupId>
                        <artifactId>{provisioningeapMavenPluginArtifactID}</artifactId>
                        <configuration>
                            <feature-packs>                                        <!--1-->
                                <feature-pack>                                   
                                    <location>org.wildfly:wildfly-galleon-pack:${version.server}</location>
                                </feature-pack>
                            </feature-packs>
                            <layers>                                               <!--2-->
                                <layer>{cloudLayerName}</layer>                   
                            </layers>
                            <name>ROOT.war</name>                                  <!--3-->
                        </configuration>
                        <executions>
                            <execution>
                                <goals>
                                    <goal>package</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>