         <artifactId>jboss-jakarta-xml-ws-api_4.0_spec</artifactId>
      </dependency>

      <dependency>
         <groupId>${project.groupId}</groupId>
         <artifactId>wildfly-ee</artifactId>
      </dependency>
      <dependency>
