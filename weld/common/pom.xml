            </exclusion>
         </exclusions>
      </dependency>

      <dependency>
         <groupId>org.wildfly.security</groupId>
         <artifactId>wildfly-elytron-security-manager</artifactId>
         <exclusions>
            <exclusion>
               <groupId>*</groupId>
               <artifactId>*</artifactId>
            </exclusion>
         </exclusions>
      </dependency>

   </dependencies>

</project>
