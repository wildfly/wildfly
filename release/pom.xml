<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.wildfly</groupId>
        <artifactId>wildfly-parent</artifactId>
        <!--
        Maintain separation between the artifact id and the version to help prevent
        merge conflicts between commits changing the GA and those changing the V.
        -->
        <version>39.0.2.Final-SNAPSHOT</version>
    </parent>

    <artifactId>wildfly-release</artifactId>
    <name>WildFly: Release</name>
    <packaging>pom</packaging>

    <dependencies>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>wildfly-dist</artifactId>
            <type>pom</type>
            <scope>provided</scope>
        </dependency>
    </dependencies>

    <profiles>
        <profile>
            <id>uploads</id>
            <activation>
                <property>
                    <name>uploads</name>
                    <value>true</value>
                </property>
            </activation>
            <dependencies>
                <dependency>
                    <groupId>${project.groupId}</groupId>
                    <artifactId>wildfly-preview-dist</artifactId>
                    <type>pom</type>
                    <scope>provided</scope>
                </dependency>
            </dependencies>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-resources-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>copy-release-distributions</id>
                                <goals>
                                    <goal>copy-resources</goal>
                                </goals>
                                <phase>package</phase>
                                <configuration>
                                    <overwrite>true</overwrite>
                                    <outputDirectory>${basedir}/target/uploads</outputDirectory>
                                    <resources>
                                        <resource>
                                            <directory>../preview/dist/target</directory>
                                            <includes>
                                                <include>wildfly-preview-*.tar.gz</include>
                                                <include>wildfly-preview-*.tar.gz.asc</include>
                                                <include>wildfly-preview-*.zip</include>
                                                <include>wildfly-preview-*.zip.asc</include>
                                            </includes>
                                            <excludes>
                                                <exclude>*-src.*</exclude>
                                            </excludes>
                                        </resource>
                                        <resource>
                                            <directory>../dist/target</directory>
                                            <includes>
                                                <include>wildfly-*.tar.gz</include>
                                                <include>wildfly-*.tar.gz.asc</include>
                                                <include>wildfly-*.zip</include>
                                                <include>wildfly-*.zip.asc</include>
                                            </includes>
                                        </resource>
                                    </resources>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>generate-sha1</id>
                                <phase>package</phase>
                                <configuration>
                                    <target>
                                        <checksum algorithm="SHA-1" fileext=".sha1">
                                            <fileset dir="${basedir}/target/uploads">
                                                <include name="*.zip"/>
                                                <include name="*.tar.gz"/>
                                            </fileset>
                                        </checksum>
                                    </target>
                                </configuration>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

</project>
