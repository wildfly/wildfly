<?xml version='1.0' encoding='UTF-8'?>
<!--  See src/resources/configuration/ReadMe.txt for how the configuration assembly works -->
<config default-supplement="default">
    <extension-module>org.jboss.as.modcluster</extension-module>
    <subsystem xmlns="urn:jboss:domain:modcluster:3.0">
        <?SUBSYSTEM?>
    </subsystem>
    <socket-binding name="modcluster" port="0" multicast-address="${jboss.modcluster.multicast.address:224.0.1.105}" multicast-port="23364"/>
    <supplement name="default">
        <replacement placeholder="SUBSYSTEM">
            <mod-cluster-config advertise-socket="modcluster" connector="ajp">
                <dynamic-load-provider>
                    <load-metric type="cpu"/>
                </dynamic-load-provider>
            </mod-cluster-config>
        </replacement>
    </supplement>
    <supplement name="no-multicast">
        <replacement placeholder="SUBSYSTEM">
            <mod-cluster-config proxies="" advertise="false" connector="ajp">
                <dynamic-load-provider>
                    <load-metric type="cpu"/>
                </dynamic-load-provider>
            </mod-cluster-config>
        </replacement>
    </supplement>
</config>
