<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.jboss.as</groupId>
        <artifactId>jboss-as-parent</artifactId>
        <version>7.2.0.Alpha1-SNAPSHOT</version>
    </parent>

    <artifactId>jboss-as-build-modular</artifactId>

    <name>JBoss Application Server: Build Modular</name>
    <packaging>pom</packaging>

    <properties>
        <!-- generated configs root dirs -->
        <generated.configs>${basedir}/target/generated-configs</generated.configs>
        <generated.configs.standalone>${generated.configs}/standalone/configuration</generated.configs.standalone>
        <generated.configs.src.dir>${basedir}/../build/src/main/resources</generated.configs.src.dir>
    </properties>
    
    <dependencies>
    	<dependency>
    		<groupId>org.jboss.as</groupId>
    		<artifactId>jboss-as-config-assembly</artifactId>
    	</dependency>
    </dependencies>
        
    <profiles>
        <profile>
            <id>modular-osgi</id>
            <activation>
                <property>
                	<name>modular</name>
                	<value>osgi</value>
                </property>
            </activation>
            <properties>
            	<modular.config.name>osgi</modular.config.name>
            	<standalone.subsystems>logging:osgi,osgi:eager,configadmin,deployment-scanner,ee,naming,jmx,remoting,security:standalone,web</standalone.subsystems>
            	<standalone.template>configuration/standalone/template-osgi.xml</standalone.template>
            	<domain.subsystems>logging:osgi,osgi:eager,configadmin,ee,naming,jmx:domain,remoting,security:domain,web</domain.subsystems>
            	<domain.template>configuration/domain/template.xml</domain.template>
            	<console.enabled>true</console.enabled>
            	<domain.enabled>false</domain.enabled>
            </properties>
            <build>
		        <plugins>
		            <plugin>
		                <groupId>org.apache.maven.plugins</groupId>
		                <artifactId>maven-antrun-plugin</artifactId>
		                <inherited>false</inherited>
		                <executions>
		                    <!--  See src/resources/configuration/ReadMe.txt for how the configuration assembly works -->
		                    <execution>
		                        <id>modular-config</id>
		                        <goals>
		                            <goal>run</goal>
		                        </goals>
		                        <phase>generate-resources</phase>
		                        <configuration>
		                            <target>
		                                <ant antfile="build-modular-config.xml" inheritRefs="true">
		                                    <target name="all"/>
		                                </ant>
		                            </target>
		                        </configuration>
		                    </execution>
		                </executions>
		            </plugin>
		        </plugins>
            </build>
        </profile>
    </profiles>

</project>
