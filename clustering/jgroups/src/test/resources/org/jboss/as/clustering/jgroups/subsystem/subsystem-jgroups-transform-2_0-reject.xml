<subsystem xmlns="urn:jboss:domain:jgroups:2.0" default-stack="minimal">
    <stack name="maximal">
        <transport type="TCP"
                   socket-binding="jgroups-tcp"
                   diagnostics-socket-binding="jgroups-diagnostics"
                   default-executor="jgroups"
                   oob-executor="jgroups-oob"
                   timer-executor="jgroups-timer"
                   shared="false"
                   thread-factory="jgroups-thread-factory"
                   machine="machine1"
                   rack="rack1"
                   site="site1">
            <property name="enable_bundling">true</property>
        </transport>
        <protocol type="MPING"/>
        <protocol type="MERGE2"/>
        <protocol type="FD_SOCK" socket-binding="jgroups-udp-fd"/>
        <protocol type="FD"/>
        <protocol type="VERIFY_SUSPECT"/>
        <protocol type="pbcast.NAKACK2"/>
        <protocol type="UNICAST2"/>
        <protocol type="pbcast.STABLE"/>
        <protocol type="pbcast.GMS"/>
        <protocol type="UFC"/>
        <protocol type="MFC"/>
        <protocol type="FRAG2"/>
        <protocol type="RSVP"/>
        <relay site="LONDON">
            <remote-site name="SFO" stack="minimal" cluster="global"/>
            <remote-site name="NYC" stack="minimal" cluster="global"/>
        </relay>
    </stack>
    <stack name="minimal">
        <transport type="UDP"/>
    </stack>
</subsystem>