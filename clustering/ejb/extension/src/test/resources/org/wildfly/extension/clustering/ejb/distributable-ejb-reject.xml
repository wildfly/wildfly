<subsystem xmlns="urn:jboss:domain:distributable-ejb:community:2.0">
    <bean-management default="default">
        <infinispan-bean-management name="default" cache-container="foo" cache="bar" max-active-beans="${exp.max-active-beans:10000}" idle-threshold="PT10M"/>
    </bean-management>
    <local-client-mappings-registry/>
    <infinispan-timer-management name="distributed" cache-container="foo" cache="bar" max-active-timers="${exp.max-active-distributed-timers:100}" idle-threshold="PT5M"/>
    <infinispan-timer-management name="transient" cache-container="foo" cache="bar" max-active-timers="${exp.max-active-transient-timers:1000}"/>
</subsystem>
