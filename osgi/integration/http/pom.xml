<project
    xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.jboss.as</groupId>
        <artifactId>jboss-as-osgi-integration</artifactId>
        <version>7.2.0.Alpha1-SNAPSHOT</version>
    </parent>

    <artifactId>jboss-as-osgi-http</artifactId>
    <name>JBoss Application Server: OSGi Integration Http</name>
    <packaging>bundle</packaging>

    <dependencies>
        <dependency>
            <groupId>org.jboss.as</groupId>
            <artifactId>jboss-as-web</artifactId>
        </dependency>
        <dependency>
            <groupId>org.jboss.as</groupId>
            <artifactId>jboss-as-osgi-service</artifactId>
        </dependency>
    </dependencies>

    <!-- Build -->
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Bundle-Activator>org.jboss.as.osgi.httpservice.HttpBundleActivator</Bundle-Activator>
                        <Export-Package>
                        	org.osgi.service.http;uses:="javax.servlet.http,javax.servlet";version="1.2.1",
                        </Export-Package>
                        <Import-Package>
                            javax.servlet;version="[3.0,4.0)", 
                            javax.servlet.http;version="[3.0,4.0)",
                            javax.management, 
                            javax.security.auth.x500, 
                            org.osgi.framework;version="[1.5,2.0)",
                        	org.osgi.service.http;version="[1.2.1,1.2.2)",
                            org.jboss.logging,
                            org.jboss.modules,
                            org.jboss.modules.management,
                            org.jboss.modules.ref,
                            org.jboss.msc,
                            org.jboss.msc.inject,
                            org.jboss.msc.service,
                            org.jboss.msc.service.management,
                            org.jboss.msc.value,
                            org.jboss.osgi.framework,
                            org.jboss.osgi.resolver,
                            !org.apache.catalina*, 
                            !org.apache.tomcat*, 
                            !org.jboss.as.controller*, 
                            !org.jboss.as.osgi*, 
                            !org.jboss.as.server*, 
                            !org.jboss.as.web*, 
							</Import-Package>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
