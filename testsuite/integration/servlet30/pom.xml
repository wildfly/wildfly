<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.jboss.as</groupId>
        <artifactId>jboss-as-ts-integ</artifactId>
        <version>7.1.1.Final-SNAPSHOT</version>
    </parent>

    <!-- ********************************************************************************** -->
    <!-- ******************************** Smoke Integration ******************************* -->
    <!-- ********************************************************************************** -->
    <groupId>org.jboss.as</groupId>
    <artifactId>jboss-as-ts-integ-servlet30</artifactId>
    <version>7.1.1.Final-SNAPSHOT</version>

    <name>JBoss Application Server Test Suite: Integration - Servlet3.0</name>

    <properties>
        <jbossas.ts.integ.dir>${basedir}/..</jbossas.ts.integ.dir>
        <jbossas.ts.dir>${jbossas.ts.integ.dir}/..</jbossas.ts.dir>
        <jbossas.project.dir>${jbossas.ts.dir}/..</jbossas.project.dir>
    </properties>

    <profiles>

        <!-- ********************************************************************************** -->
        <!-- ****     Servlet3.0 tests                                                ********* -->
        <!-- ********************************************************************************** -->
        <profile>
            <id>servlet30.integration.tests.profile</id>
            <activation>
                <property>
                    <name>!noServlet30</name>
                </property>
            </activation>

            <properties>
            </properties>

            <!--
                Server configuration executions.
                Naming convention for executions (which we read in the log): for server config X, call it X.server
            -->
            <build>
                <plugins>

                    <!-- Surefire. -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <executions combine.children="append">

                            <!-- Disable default-test execution. -->
                            <execution><id>default-test</id><goals><goal>test</goal></goals><phase>none</phase></execution>

                            <!-- Servlet3.0 tests - FULL. -->
                            <execution>
                                <id>servlet30-full.surefire</id>
                                <phase>test</phase>
                                <goals><goal>test</goal></goals>
                                <configuration>
                                    <includes>
                                        <include>org/jboss/as/test/servlet30/**/*TestCase.java</include>
                                    </includes>

                                    <!-- Parameters to test cases. -->
                                    <systemPropertyVariables>
                                        <jboss.server.config.file.name>standalone-full.xml</jboss.server.config.file.name>
                                        <jboss.inst>${basedir}/target/jbossas</jboss.inst>
                                    </systemPropertyVariables>
                                </configuration>
                            </execution>
                        </executions>

                    </plugin>

                </plugins>
            </build>
        </profile>
    </profiles>
</project>
