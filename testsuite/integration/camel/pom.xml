<?xml version="1.0" encoding="UTF-8"?>

<!-- 
  Set these VM properties in your IDE debugger 

  -Djava.util.logging.manager=org.jboss.logmanager.LogManager
  -Djboss.home=${workspace_loc:jboss-as-build}/target/jboss-as-8.0.0.Alpha1-SNAPSHOT 
  -DallowConnectingToRunningServer=true
-->
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.jboss.as</groupId>
        <artifactId>jboss-as-ts-integ</artifactId>
        <version>8.0.0.Alpha1-SNAPSHOT</version>
    </parent>

    <!-- ********************************************************************************** -->
    <!-- *********************************** Camel      *********************************** -->
    <!-- ********************************************************************************** -->

    <artifactId>jboss-as-ts-integ-camel</artifactId>
    <name>JBoss Application Server Test Suite: Integration - Camel</name>

    <properties>
        <jbossas.ts.integ.dir>${basedir}/..</jbossas.ts.integ.dir>
        <jbossas.ts.dir>${jbossas.ts.integ.dir}/..</jbossas.ts.dir>
        <jbossas.project.dir>${jbossas.ts.dir}/..</jbossas.project.dir>
        <jboss.home>${jbossas.project.dir}/build/target/jboss-as-${jboss.as.release.version}</jboss.home>
    </properties>

	<dependencies>
        <dependency>
            <groupId>org.jboss.as</groupId>
            <artifactId>jboss-as-camel</artifactId>
        </dependency>
	</dependencies>
	
    <profiles>
        <profile>
            <id>osgi.integration.tests.profile</id>
            <activation>
                <property>
                    <name>!ts.noCamel</name>
                </property>
            </activation>

            <properties>
            </properties>

            <!--
                Server configuration executions.
            -->
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <configuration>
                            <systemPropertyVariables>
                                <arquillian.launch>camel</arquillian.launch>
                                <jboss.server.config.file.name>standalone-camel.xml</jboss.server.config.file.name>
                            </systemPropertyVariables>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
