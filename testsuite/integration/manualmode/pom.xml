<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.wildfly</groupId>
        <artifactId>wildfly-ts-integ</artifactId>
        <version>9.0.0.Alpha2-SNAPSHOT</version>
    </parent>

    <!-- ********************************************************************************** -->
    <!-- ************************* Manual-mode Integration Tests ************************** -->
    <!-- ********************************************************************************** -->
    <groupId>org.wildfly</groupId>
    <artifactId>wildfly-ts-integ-manualmode</artifactId>
    <version>9.0.0.Alpha2-SNAPSHOT</version>

    <name>WildFly Test Suite: Integration - Manual Mode Tests</name>

    <properties>
        <jbossas.ts.integ.dir>${basedir}/..</jbossas.ts.integ.dir>
        <jbossas.ts.dir>${jbossas.ts.integ.dir}/..</jbossas.ts.dir>
        <jbossas.project.dir>${jbossas.ts.dir}/..</jbossas.project.dir>
        <surefire.ejbClient.memory.args>-Xms512m -Xmx1280m -XX:MaxPermSize=256m</surefire.ejbClient.memory.args>
    </properties>

    <profiles>

        <profile>
            <id>manualmode.integration.tests.profile</id>
            <activation>
                <property>
                    <name>!noManualmode</name>
                </property>
            </activation>

            <properties>
            </properties>

            <!--
                Server configuration executions.
                Naming convention for executions (which we read in the log): for server config X, call it X.server
            -->
            <build>
                <plugins>

                    <!-- Build the server configuration(s) -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <executions combine.children="append">
                            <execution>
                                <id>build-manual-mode-servers</id>
                                <phase>process-test-resources</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <target>
                                        <ant antfile="${jbossas.ts.integ.dir}/src/test/scripts/manualmode-build.xml">
                                            <property name="management.address" value="${node0}"/>
                                            <property name="node1" value="${node1}"/>
                                            <property name="node0" value="${node0}"/>
                                            <property name="jboss.dist" value="${jboss.dist}" />
                                            <target name="build-manual-mode"/>
                                        </ant>
                                    </target>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>


                    <!-- Surefire. -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <executions combine.children="append">
                            <!-- Disable default-test execution. -->
                            <execution><id>default-test</id><goals><goal>test</goal></goals><phase>none</phase></execution>

                            <execution>
                                <id>basic-manualmode-ejbClient.surefire</id>
                                <phase>test</phase>
                                <goals><goal>test</goal></goals>
                                <configuration>

                                    <!-- Workaround for nasty and hacky tests not cleaning up completely after themselves. -->
                                    <reuseForks>false</reuseForks>

                                    <includes>
                                        <include>org/jboss/as/test/manualmode/**/EjbClientMarshallingParamsTestCase.java</include>
                                    </includes>
                                    <runOrder>alphabetical</runOrder>

                                    <!-- Parameters to test cases. -->
                                    <systemPropertyVariables combine.children="append">
                                    <arquillian.launch>manual-mode</arquillian.launch>
                                    <jboss.server.config.file.name>${standalone.ha.xml}</jboss.server.config.file.name>
                                        <!-- needed for SSLEJBRemoteClientTestCase only, however setting them from within the test itself isn't possible -->
                                        <javax.net.ssl.trustStore>${basedir}/src/test/resources/ejb3/ssl/jbossClient.truststore</javax.net.ssl.trustStore>
                                        <javax.net.ssl.keyStore>${basedir}/src/test/resources/ejb3/ssl/jbossClient.keystore</javax.net.ssl.keyStore>
                                        <javax.net.ssl.trustStorePassword>clientPassword</javax.net.ssl.trustStorePassword>
                                        <javax.net.ssl.keyStorePassword>clientPassword</javax.net.ssl.keyStorePassword>
                                        <javax.net.debug>ssl</javax.net.debug>
                                    </systemPropertyVariables>
                                    <argLine>${surefire.ejbClient.memory.args} ${jvm.args.ip.client} ${jvm.args.timeouts}</argLine>
                                </configuration>
                            </execution>

                            <execution>
                                <id>basic-manualmode-default-full.surefire</id>
                                <phase>test</phase>
                                <goals><goal>test</goal></goals>
                                <configuration>

                                    <!-- Workaround for nasty and hacky tests not cleaning up completely after themselves. -->
                                    <reuseForks>false</reuseForks>

                                    <includes>
                                        <include>org/jboss/as/test/manualmode/**/AdminOnlyAuditLogTestCase.java</include>
                                        <include>org/jboss/as/test/manualmode/**/AuditLogBootingLogTestCase.java</include>
                                        <include>org/jboss/as/test/manualmode/**/AuditLogFieldsOfLogTestCase.java</include>
                                        <include>org/jboss/as/test/manualmode/**/DeploymentScannerUnitTestCase.java</include>
                                        <include>org/jboss/as/test/manualmode/**/EJBClientClusterConfigurationTestCase.java</include>
                                        <include>org/jboss/as/test/manualmode/**/RemoteOutboundConnectionReconnectTestCase.java</include>
                                        <include>org/jboss/as/test/manualmode/**/EJBClientReconnectionTestCase.java</include>
                                        <include>org/jboss/as/test/manualmode/**/SSLEJBRemoteClientTestCase.java</include>
                                        <include>org/jboss/as/test/manualmode/**/LayeredDistributionTestCase.java</include>
                                        <include>org/jboss/as/test/manualmode/**/AbstractOperationsTestCase.java</include>
                                        <include>org/jboss/as/test/manualmode/**/CustomFormattersTestCase.java</include>
                                        <include>org/jboss/as/test/manualmode/**/Log4jAppenderTestCase.java</include>
                                        <include>org/jboss/as/test/manualmode/**/LoggingDependenciesTestCase.java</include>
                                        <include>org/jboss/as/test/manualmode/**/LoggingPreferencesTestCase.java</include>
                                        <include>org/jboss/as/test/manualmode/**/PerDeployLoggingTestCase.java</include>
                                        <include>org/jboss/as/test/manualmode/**/SizeAppenderRestartTestCase.java</include>
                                        <include>org/jboss/as/test/manualmode/**/CustomVaultInCLITestCase.java</include>
                                        <include>org/jboss/as/test/manualmode/**/GlobalOpsTestCase.java</include>
                                        <include>org/jboss/as/test/manualmode/**/HTTPSConnectionWithCLITestCase.java</include>
                                        <include>org/jboss/as/test/manualmode/**/ManagementOpTimeoutTestCase.java</include>
                                        <include>org/jboss/as/test/manualmode/**/ReloadOpsTestCase.java</include>
                                        <include>org/jboss/as/test/manualmode/**/VaultPasswordsInCLITestCase.java</include>
                                        <include>org/jboss/as/test/manualmode/**/HornetQBackupActivationTestCase.java</include>
                                        <include>org/jboss/as/test/manualmode/**/ParseAndMarshalModelsTestCase.java</include>
                                        <include>org/jboss/as/test/manualmode/**/OutboundLdapConnectionTestCase.java</include>
                                        <include>org/jboss/as/test/manualmode/**/VaultSystemPropertyOnServerStartTestCase.java</include>
                                        <include>org/jboss/as/test/manualmode/**/CustomVaultInModuleTestCase.java</include>
                                        <include>org/jboss/as/test/manualmode/**/HTTPSManagementInterfaceTestCase.java</include>
                                        <include>org/jboss/as/test/manualmode/**/HTTPSWebConnectorTestCase.java</include>
                                        <include>org/jboss/as/test/manualmode/**/ReloadRequiringChangesTestCase.java</include>
                                        <include>org/jboss/as/test/manualmode/**/ReloadWSDLPublisherTestCase.java</include>
                                        <include>org/jboss/as/test/manualmode/**/WSAttributesChangesTestCase.java</include>
                                    </includes> 
                                    <runOrder>alphabetical</runOrder>

                                    <!-- Parameters to test cases. -->
                                    <systemPropertyVariables combine.children="append">
                                        <arquillian.launch>manual-mode</arquillian.launch>
                                        <jboss.server.config.file.name>${standalone.ha.xml}</jboss.server.config.file.name>
                                        <!-- needed for SSLEJBRemoteClientTestCase only, however setting them from within the test itself isn't possible -->
                                        <javax.net.ssl.trustStore>${basedir}/src/test/resources/ejb3/ssl/jbossClient.truststore</javax.net.ssl.trustStore>
                                        <javax.net.ssl.keyStore>${basedir}/src/test/resources/ejb3/ssl/jbossClient.keystore</javax.net.ssl.keyStore>
                                        <javax.net.ssl.trustStorePassword>clientPassword</javax.net.ssl.trustStorePassword>
                                        <javax.net.ssl.keyStorePassword>clientPassword</javax.net.ssl.keyStorePassword>
                                        <javax.net.debug>ssl</javax.net.debug>
                                    </systemPropertyVariables>
                                </configuration>
                            </execution>
    
                        </executions>
                    </plugin>
                                                            
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>keytool-maven-plugin</artifactId>
                        <version>1.4</version>
                        <dependencies>
                            <dependency>
                                <groupId>org.codehaus.mojo</groupId>
                                <artifactId>keytool-api-1.7</artifactId>
                                <version>1.4</version>
                            </dependency>
                        </dependencies>
                        <executions>
                            <execution>
                                <phase>generate-test-resources</phase>
                                <id>clean-cli-vault-keystore</id>
                                <goals>
                                    <goal>clean</goal>
                                </goals>
                            </execution>
                            <execution>
                                <phase>generate-test-resources</phase>
                                <id>genseckey-cli-vault-keystore</id>
                                <goals>
                                    <goal>generateSecretKey</goal>
                                </goals>
                            </execution>
                        </executions>
                        <configuration>
                            <keystore>${basedir}/target/cli-vault.keystore</keystore>
                            <dname>cn=JBoss Security,ou=JBoss Division,o=RedHatInc,l=Raleigh,st=NC,c=US</dname>
                            <keypass>secret_1</keypass>
                            <storepass>secret_1</storepass>
                            <storetype>jceks</storetype>
                            <alias>vault</alias>
                            <keyalg>AES</keyalg>
                            <keysize>128</keysize>
                            <validity>365</validity>
                        </configuration>
                    </plugin>

                </plugins>
            </build>
        </profile>

    </profiles>
</project>
