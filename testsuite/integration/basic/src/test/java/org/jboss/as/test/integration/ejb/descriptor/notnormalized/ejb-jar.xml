<ejb-jar
	xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/ejb-jar_3_1.xsd"
	version="3.1">
	<enterprise-beans>
	    <!-- NOTE: leave whitespaces, they are there for a reason :) -->
		<!-- 2.1 beans -->
		<!-- LOCAL -->
		<session>
			<ejb-name>SimpleLocalHomeBean</ejb-name>
			<local-home>org.jboss.as.test.integration.ejb.home.localhome.SimpleLocalHome </local-home>
			<local>org.jboss.as.test.integration.ejb.home.localhome.SimpleLocalInterface </local>
			<ejb-class>org.jboss.as.test.integration.ejb.home.localhome.descriptor.SimpleStatelessLocalBean </ejb-class>
			<session-type>Stateless</session-type>
		</session>
		<session>
			<ejb-name>SimpleStatefulLocalHomeBean</ejb-name>
			<local-home>org.jboss.as.test.integration.ejb.home.localhome.SimpleStatefulLocalHome </local-home>
			<local>org.jboss.as.test.integration.ejb.home.localhome.SimpleLocalInterface </local>
			<ejb-class>org.jboss.as.test.integration.ejb.home.localhome.descriptor.SimpleStatefulLocalBean </ejb-class>
			<session-type>Stateful</session-type>
		</session>
		<!-- REMOTE -->
		<session>
			<ejb-name>SimpleHomeBean</ejb-name>
			<home>org.jboss.as.test.integration.ejb.home.remotehome.SimpleHome </home>
			<remote>org.jboss.as.test.integration.ejb.home.remotehome.SimpleInterface </remote>
			<ejb-class>org.jboss.as.test.integration.ejb.home.remotehome.descriptor.SimpleStatelessBean </ejb-class>
			<session-type>Stateless</session-type>
		</session>

		<session>
			<ejb-name>SimpleStatefulHomeBean</ejb-name>
			<home>org.jboss.as.test.integration.ejb.home.remotehome.SimpleStatefulHome </home>
			<remote>org.jboss.as.test.integration.ejb.home.remotehome.SimpleInterface </remote>
			<ejb-class>org.jboss.as.test.integration.ejb.home.remotehome.descriptor.SimpleStatefulBean </ejb-class>
			<session-type>Stateful</session-type>
		</session>

		<!-- ENTITY -->
		<entity>
			<ejb-name>SimpleBMP</ejb-name>
			<local-home>org.jboss.as.test.integration.ejb.entity.bmp.BMPLocalHome </local-home>
			<local>org.jboss.as.test.integration.ejb.entity.bmp.BMPLocalInterface </local>
			<ejb-class>org.jboss.as.test.integration.ejb.entity.bmp.SimpleBMPBean </ejb-class>
			<persistence-type>Bean</persistence-type>
			<prim-key-class>java.lang.Integer</prim-key-class>
			<reentrant>true</reentrant>
		</entity>

	</enterprise-beans>

	<!-- interceptors -->
	<interceptors>
		<interceptor>
			<interceptor-class>org.jboss.as.test.integration.ejb.descriptor.notnormalized.MethodInterceptor </interceptor-class>
			<around-invoke>
				<method-name>interceptMethodCall </method-name>
			</around-invoke>
		</interceptor>
		<interceptor>
			<interceptor-class>org.jboss.as.test.integration.ejb.descriptor.notnormalized.PostActivateInterceptor </interceptor-class>
			<post-activate>
				<lifecycle-callback-method>interceptLifeCycle</lifecycle-callback-method>
			</post-activate>

		</interceptor>
		<interceptor>
			<interceptor-class>org.jboss.as.test.integration.ejb.descriptor.notnormalized.LifeInterceptor </interceptor-class>
			<post-construct>
				<lifecycle-callback-method>interceptLifeCycle </lifecycle-callback-method>
			</post-construct>
			<pre-destroy>
				<lifecycle-callback-method>interceptLifeCycle </lifecycle-callback-method>
			</pre-destroy>
		</interceptor>

	</interceptors>

	<assembly-descriptor>
		<!-- interceptors -->
		<interceptor-binding>
			<ejb-name>*</ejb-name>
			<interceptor-class>org.jboss.as.test.integration.ejb.descriptor.notnormalized.MethodInterceptor </interceptor-class>
		</interceptor-binding>
		<!-- app exceptions -->
		<application-exception>
			<exception-class>org.jboss.as.test.integration.ejb.descriptor.notnormalized.TestException </exception-class>
		</application-exception>
	</assembly-descriptor>
</ejb-jar>