<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

  <persistence-unit name="user-defined-pu" transaction-type="JTA">
    <jta-data-source>java:jboss/datasources/ExampleDS</jta-data-source>

    <class>org.jboss.as.test.integration.picketlink.idm.entities.AttributedTypeEntity</class>
    <class>org.jboss.as.test.integration.picketlink.idm.entities.AccountEntity</class>
    <class>org.jboss.as.test.integration.picketlink.idm.entities.RoleTypeEntity</class>
    <class>org.jboss.as.test.integration.picketlink.idm.entities.GroupTypeEntity</class>
    <class>org.jboss.as.test.integration.picketlink.idm.entities.IdentityTypeEntity</class>
    <class>org.jboss.as.test.integration.picketlink.idm.entities.RelationshipTypeEntity</class>
    <class>org.jboss.as.test.integration.picketlink.idm.entities.RelationshipIdentityTypeEntity</class>
    <class>org.jboss.as.test.integration.picketlink.idm.entities.PartitionTypeEntity</class>
    <class>org.jboss.as.test.integration.picketlink.idm.entities.PasswordCredentialTypeEntity</class>
    <class>org.jboss.as.test.integration.picketlink.idm.entities.AttributeTypeEntity</class>

    <exclude-unlisted-classes>true</exclude-unlisted-classes>

    <properties>
      <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
      <property name="hibernate.show_sql" value="true"/>
      <property name="hibernate.format_sql" value="true"/>
      <property name="hibernate.flushMode" value="FLUSH_AUTO" />
      <property name="hibernate.listeners.envers.autoRegister" value="false"/>
      <property name="javax.persistence.validation.mode" value="none"/>
    </properties>
  </persistence-unit>

</persistence>