<ejb-jar version="3.1" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/ejb-jar_3_1.xsd">
           
    <enterprise-beans>
        <session>
            <ejb-name>SimpleBeanDefinition</ejb-name>
            <ejb-class>org.jboss.as.test.integration.ejb.descriptor.replacement.SessionTypeSpecifiedBean</ejb-class>
            <session-type>Stateful</session-type>
        </session> 
        
        <session>
            <ejb-name>SimpleBeanDefinitionUnkknown</ejb-name>
            <ejb-class>org.jboss.as.test.integration.ejb.descriptor.replacement.SessionTypeSpecifiedBean</ejb-class>
            <session-type>Stateful</session-type>
        </session>  
        
        <session>
            <ejb-name>SimpleSessionBean</ejb-name>
            <ejb-class>org.jboss.as.test.integration.ejb.descriptor.replacement.SimpleSessionBean</ejb-class>
            <session-type>Stateless</session-type>
        </session>
        
        <session>
            <description>Simple bean for testing modification of method behavior by calling other method after begining of the method</description>
            <ejb-name>SimpleBean</ejb-name>
            <ejb-class>org.jboss.as.test.integration.ejb.descriptor.replacement.SimpleBean</ejb-class>
            <session-type>Stateful</session-type>
            <after-begin-method>                
                <method-name>setNameToAnonym</method-name>
            </after-begin-method>
        </session>
     
        <session>
            <description>Bean for testing transactions which are driven by Container</description>
            <ejb-name>TransactionBean</ejb-name>
            <ejb-class>org.jboss.as.test.integration.ejb.descriptor.replacement.TransactionBean</ejb-class>
            <session-type>Stateless</session-type>
            <transaction-type>Container</transaction-type>            
        </session>
        
        <session>
            <description>Bean with injected bean SimpleSessionBean</description>
            <ejb-name>SimpleBeanWithInjection</ejb-name>
            <ejb-class>org.jboss.as.test.integration.ejb.descriptor.replacement.SimpleInjectionBean</ejb-class>
            <session-type>Stateless</session-type>
            <ejb-local-ref>
                <ejb-ref-name>injectedBean</ejb-ref-name>
                <local>org.jboss.as.test.integration.ejb.descriptor.replacement.SessionBean</local>
                <ejb-link>SimpleSessionBean</ejb-link>
                <injection-target>
                    <injection-target-class>org.jboss.as.test.integration.ejb.descriptor.replacement.SimpleInjectionBean</injection-target-class>
                    <injection-target-name>injectedBean</injection-target-name>                    
                </injection-target>
            </ejb-local-ref>
        </session>           
    </enterprise-beans>
 
    <assembly-descriptor>      
        <container-transaction>
            <description>Sets that method requires to be run in transaction</description>
            <method>
                <ejb-name>TransactionBean</ejb-name>
                <method-name>transactionStatus</method-name>
            </method>
            <trans-attribute>Mandatory</trans-attribute>
        </container-transaction>
    </assembly-descriptor>    
</ejb-jar>
