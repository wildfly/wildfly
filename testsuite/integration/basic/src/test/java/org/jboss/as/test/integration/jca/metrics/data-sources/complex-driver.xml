<subsystem xmlns="urn:jboss:domain:datasources:7.2">
    <datasources>
        <drivers>
            <!-- we need to obtain information about driver version from maven -->
            <driver name="name" module="com.h2database.h2" major-version="%s" minor-version="%s">
                <driver-class>org.h2.Driver</driver-class>
                <xa-datasource-class>org.h2.jdbcx.JdbcDataSource</xa-datasource-class>
            </driver>
        </drivers>
    </datasources>
</subsystem>
