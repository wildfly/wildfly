<jboss:ejb-jar xmlns:jboss="http://www.jboss.com/xml/ns/javaee"
               xmlns="http://java.sun.com/xml/ns/javaee"
               xmlns:s="urn:security"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://www.jboss.com/xml/ns/javaee http://www.jboss.org/j2ee/schema/jboss-ejb3-2_0.xsd
                     http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/ejb-jar_3_1.xsd"
               version="3.1"
               impl-version="2.0">
    <enterprise-beans>   
        <session>
            <ejb-name>RoleProtectedBean</ejb-name>
            <ejb-class>org.jboss.as.test.integration.ejb.descriptor.replacement.security.RoleProtectedBean</ejb-class>
            <session-type>Stateless</session-type>            
            <security-role-ref>
                <role-name>role1</role-name>
            </security-role-ref>
            <security-role-ref>
                <role-name>role2</role-name>
            </security-role-ref>
        </session>      
    </enterprise-beans>   
     
    <assembly-descriptor>
        <s:security>
            <ejb-name>RoleProtectedBean</ejb-name>
            <s:security-domain>ejb3-tests</s:security-domain>
        </s:security>
        <security-role>
            <role-name>role1</role-name>
        </security-role>
        <security-role>
            <role-name>role2</role-name>
        </security-role>
        <method-permission>
            <role-name>role2</role-name>
            <method>
                <ejb-name>RoleProtectedBean</ejb-name>
                <method-name>role2Echo</method-name>
            </method>
        </method-permission>
        <method-permission>
            <unchecked/>
            <method>
                <ejb-name>RoleProtectedBean</ejb-name>
                <method-name>permitAllEcho</method-name>
            </method>
        </method-permission>        
        <exclude-list>
            <method>
                <ejb-name>RoleProtectedBean</ejb-name>
                <method-name>denyAllEcho</method-name>
            </method>
        </exclude-list>
    </assembly-descriptor>
</jboss:ejb-jar>
