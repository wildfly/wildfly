<jboss-ejb-client xmlns="urn:jboss:ejb-client:1.2">
    <!-- A 1 second invocation timeout which will be tested in EJBClientDescriptorTestCase -->
    <client-context deployment-node-selector="org.jboss.as.test.integration.ejb.client.descriptor.DummyDeploymentNodeSelector">
        <ejb-receivers exclude-local-receiver="${exclude.local.receiver}">
            <remoting-ejb-receiver outbound-connection-ref="${outbound.connection.ref}"
                    connect-timeout="7000">
                <channel-creation-options>
                    <property name="org.jboss.remoting3.RemotingOptions.MAX_OUTBOUND_MESSAGES" value="${max.outbound.messages:1234}"/>
                    <property name="org.jboss.remoting3.RemotingOptions.MAX_INBOUND_MESSAGES" value="343"/>
                </channel-creation-options>
            </remoting-ejb-receiver>
        </ejb-receivers>
    </client-context>
</jboss-ejb-client>
