<?xml version="1.1" encoding="UTF-8"?>
<ejb-jar xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/ejb-jar_3_1.xsd"
         version="3.1">
    <enterprise-beans>
        <session>
            <ejb-name>AsyncBeanDescriptor</ejb-name>
            <ejb-class>org.jboss.as.test.integration.ejb.async.AsyncBeanDescriptor</ejb-class>
            <session-type>Stateless</session-type>
            <async-method>
            	<method-name>futureMethod</method-name>
            	<method-params>
            		<method-param>java.util.concurrent.CountDownLatch</method-param>
            	</method-params>
            </async-method>
        </session>
    </enterprise-beans>
</ejb-jar>