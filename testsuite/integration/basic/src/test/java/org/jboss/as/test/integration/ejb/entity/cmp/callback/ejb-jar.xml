<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/ejb-jar_3_1.xsd"
         version="3.1">

    <enterprise-beans>
        <!-- Entity Beans -->
        <entity>
            <ejb-name>SimpleEntity</ejb-name>

            <local-home>org.jboss.as.test.integration.ejb.entity.cmp.callback.SimpleEntityLocalHome</local-home>
            <local>org.jboss.as.test.integration.ejb.entity.cmp.callback.SimpleEntityLocal</local>

            <ejb-class>org.jboss.as.test.integration.ejb.entity.cmp.callback.SimpleEntityBean</ejb-class>
            <persistence-type>Container</persistence-type>
            <prim-key-class>java.lang.Long</prim-key-class>
            <reentrant>false</reentrant>
            <cmp-version>2.x</cmp-version>
            <abstract-schema-name>SimpleEntity</abstract-schema-name>
            <cmp-field>
                <field-name>id</field-name>
            </cmp-field>
            <cmp-field>
                <field-name>name</field-name>
            </cmp-field>
            <primkey-field>id</primkey-field>

            <query>
                <query-method>
                    <method-name>findById</method-name>
                    <method-params>
                        <method-param>java.lang.Long</method-param>
                    </method-params>
                </query-method>
                <ejb-ql><![CDATA[SELECT OBJECT(o) FROM SimpleEntity o WHERE o.id = ?1]]></ejb-ql>
            </query>
        </entity>

    </enterprise-beans>
</ejb-jar>
