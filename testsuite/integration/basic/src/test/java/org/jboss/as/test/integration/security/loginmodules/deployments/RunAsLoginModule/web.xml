<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>IdentityLoginModule test aplication</display-name>

    <servlet>
        <servlet-name>TestServlet</servlet-name>
        <servlet-class>org.jboss.as.test.integration.security.loginmodules.common.servlets.PrincipalPrintingServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>TestServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <login-config>
        <auth-method>BASIC</auth-method>
        <realm-name>file</realm-name>
    </login-config>


    <security-role>
        <role-name>gooduser</role-name>
    </security-role>
    <security-role>
        <role-name>superuser</role-name>
    </security-role>
    <security-role>
        <role-name>RunAsLoginModuleRole</role-name>
    </security-role>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>secured-area</web-resource-name>
            <url-pattern>/</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>gooduser</role-name>
            <role-name>superuser</role-name>
        </auth-constraint>
    </security-constraint>

</web-app>