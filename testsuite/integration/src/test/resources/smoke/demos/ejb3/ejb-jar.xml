<ejb-jar xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/ejb-jar_3_1.xsd"
         version="3.1">
    <enterprise-beans>
        <session>
            <ejb-name>DDBasedSLSB</ejb-name>
            <ejb-class>org.jboss.as.demos.ejb3.archive.DDBasedSLSB</ejb-class>
            <session-type>Stateless</session-type>
        </session>

        <session>
            <ejb-name>DDOverrideSLSB</ejb-name>
            <business-remote>org.jboss.as.demos.ejb3.archive.Echo</business-remote>
            <ejb-class>org.jboss.as.demos.ejb3.archive.DDOverrideSLSB</ejb-class>
            <session-type>Stateless</session-type>
        </session>

        <session>
            <ejb-name>PartialDDSFSB</ejb-name>
            <business-local>org.jboss.as.demos.ejb3.archive.Echo</business-local>
            <ejb-class>org.jboss.as.demos.ejb3.archive.PartialDDSFSB</ejb-class>
            <session-type>Stateful</session-type>
        </session>

        <session>
            <ejb-name>InterceptedDDBean</ejb-name>
            <local-bean></local-bean>
            <ejb-class>org.jboss.as.demos.ejb3.archive.InterceptedDDBean</ejb-class>
            <session-type>Singleton</session-type>
        </session>

    </enterprise-beans>

    <interceptors>
        <interceptor>
            <interceptor-class>org.jboss.as.demos.ejb3.archive.SimpleInterceptor</interceptor-class>
        </interceptor>
        <interceptor>
            <interceptor-class>org.jboss.as.demos.ejb3.archive.DDBasedInterceptor</interceptor-class>
            <around-invoke>
                <method-name>onInvoke</method-name>
            </around-invoke>
            <post-construct>
                <lifecycle-callback-method>onConstruct</lifecycle-callback-method>
            </post-construct>
        </interceptor>
    </interceptors>

    <assembly-descriptor>
        <interceptor-binding>
            <ejb-name>InterceptedDDBean</ejb-name>
            <interceptor-class>org.jboss.as.demos.ejb3.archive.SimpleInterceptor</interceptor-class>
            <interceptor-class>org.jboss.as.demos.ejb3.archive.DDBasedInterceptor</interceptor-class>
        </interceptor-binding>
    </assembly-descriptor>

</ejb-jar>


