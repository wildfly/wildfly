            <artifactId>wildfly-elytron-x500-cert</artifactId>
        </dependency>
        <dependency>
            <groupId>org.wildfly.security</groupId>
            <artifactId>wildfly-elytron-x500</artifactId>
        </dependency>
    </dependencies>

</project>
