        <dependency>
            <groupId>org.wildfly.transaction</groupId>
            <artifactId>wildfly-transaction-client</artifactId>
            <scope>test</scope>
        </dependency>
      
        <dependency>
           <groupId>org.wildfly.core</groupId>
            <artifactId>wildfly-model-test</artifactId>
        </dependency>
        <dependency>
            <groupId>org.wildfly.core</groupId>
