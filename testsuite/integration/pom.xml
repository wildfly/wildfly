<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.jboss.as</groupId>
        <artifactId>jboss-as-testsuite</artifactId>
        <version>7.1.0.Alpha1-SNAPSHOT</version>
    </parent>

    <groupId>org.jboss.as</groupId>
    <artifactId>jboss-as-testsuite-integration</artifactId>
    <version>7.1.0.Alpha1-SNAPSHOT</version>

    <name>JBoss Application Server Test Suite: Integration Tests</name>

    <dependencies>
        <dependency>
            <groupId>org.jboss.as</groupId>
            <artifactId>jboss-as-webservices-tests-integration</artifactId>
            <version>${project.version}</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <inherited>false</inherited>
                <executions>
                    <execution>
                        <id>build-jars</id>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <phase>test-compile</phase>
                        <configuration>
                            <tasks>
                                <property name="tests.resources.dir" value="${basedir}/src/test/resources" />
                                <property name="tests.output.dir" value="${project.build.directory}" />
                                <ant antfile="src/test/scripts/build-jars.xml">
                                    <target name="build-jars" />
                                </ant>
                            </tasks>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <includes>
                        <include>**/*TestCase.java</include>
                    </includes>
                    <excludes>
                        <!-- Messaging tests are excluded since the default/web profile doesn't support messaging -->
                        <exclude>org/jboss/as/testsuite/integration/messaging/**/*TestCase.java</exclude>
                        <!-- WebService tests are excluded since the default/web profile doesn't support webservices -->
                        <exclude>org/jboss/as/testsuite/integration/as1675/**/*TestCase.java</exclude>
                        <exclude>org/jboss/as/testsuite/integration/ws/**/*TestCase.java</exclude>
                        <exclude>org/jboss/as/testsuite/integration/wsejb/**/*TestCase.java</exclude>
                        <exclude>org/jboss/as/testsuite/integration/xerces/ws/**/*TestCase.java</exclude>
                        <exclude>org/jboss/as/testsuite/integration/mdb/**/*TestCase.java</exclude>
                        <exclude>org/jboss/as/testsuite/integration/ejb/async/**/*TestCase.java</exclude>
                    </excludes>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>default</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <dependencies>
                <dependency>
                    <groupId>org.jboss.as</groupId>
                    <artifactId>jboss-as-arquillian-container-managed</artifactId>
                    <scope>test</scope>
                </dependency>
            </dependencies>
        </profile>

        <profile>
            <id>preview</id>
            <activation>
                <property>
                    <name>preview</name>
                </property>
            </activation>
            <dependencies>
                <dependency>
                    <groupId>org.jboss.as</groupId>
                    <artifactId>jboss-as-arquillian-container-managed</artifactId>
                    <scope>test</scope>
                </dependency>
            </dependencies>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>preview</id>
                                <phase>test</phase>
                                <goals>
                                    <goal>test</goal>
                                </goals>
                                <configuration>
                                    <redirectTestOutputToFile>true</redirectTestOutputToFile>
                                    <enableAssertions>true</enableAssertions>
                                    <systemPropertyVariables>
                                        <jboss.server.config.file.name>standalone-preview.xml</jboss.server.config.file.name>
                                    </systemPropertyVariables>
                                    <includes>
                                        <!-- Messaging tests are included since the preview profile supports messaging -->
                                        <include>org/jboss/as/testsuite/integration/messaging/**/*TestCase.java</include>
                                        <!-- Enable the Webservice testcases since "preview" profile has support for webservices -->
                                        <include>org/jboss/as/testsuite/integration/as1675/**/*TestCase.java</include>
                                        <include>org/jboss/as/testsuite/integration/ws/**/*TestCase.java</include>
                                        <include>org/jboss/as/testsuite/integration/wsejb/**/*TestCase.java</include>
                                        <include>org/jboss/as/testsuite/integration/xerces/ws/**/*TestCase.java</include>
                                        <include>org/jboss/as/testsuite/integration/mdb/**/*TestCase.java</include>
                                        <include>org/jboss/as/testsuite/integration/ejb/async/**/*TestCase.java</include>
                                    </includes>
                                    <excludes>
                                        <exclude>none</exclude>
                                    </excludes>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>remote</id>
            <activation>
                <property>
                    <name>remote</name>
                </property>
            </activation>
            <dependencies>
                <dependency>
                    <groupId>org.jboss.as</groupId>
                    <artifactId>jboss-as-arquillian-container-remote</artifactId>
                    <scope>test</scope>
                </dependency>
            </dependencies>
        </profile>
    </profiles>

</project>
